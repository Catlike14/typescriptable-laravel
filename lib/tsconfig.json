{
  "compilerOptions": {
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "~": ["./"],
      "~/*": ["./*"]
    },
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "jsxImportSource": "vue"
  },
  "include": [
    "src",
    "tests",
    "*.d.ts"
  ],
  "exclude": ["**/dist", "**/node_modules"]
}
