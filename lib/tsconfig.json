{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "~": ["./"],
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./*.d.ts"],
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "tests",
    "./*.d.ts",
    "./*.ts",
    "./src/**/*.vue",
    "./node_modules/@inertiajs/vue3"
  ],
  "exclude": ["**/dist", "**/node_modules"]
}
